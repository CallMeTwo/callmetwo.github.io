{
  "name": "web-projects",
  "version": "1.0.0",
  "description": "Monorepo for multiple web projects",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w data-analyzer -- --host",
    "dev:static": "npm run build:copy && python3 -m http.server 5173",
    "build": "npm run build --workspaces",
    "build:copy": "npm run build -w data-analyzer && rm -rf data-analyzer/* && cp -r packages/data-analyzer/dist/* data-analyzer/",
    "preview": "python3 -m http.server 5173",
    "deploy": "npm run build:copy && git add data-analyzer/ && git commit -m 'Deploy: Update data-analyzer' && git push",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.3.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "jstat": "^1.9.6"
  }
}

# Clinical Calculator Environment Configuration Example
# Copy this file to .env.local and update values as needed

# Application Settings
VITE_APP_NAME=Clinical Calculator
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Calculate clinical risk scores and interpretations

# Environment
NODE_ENV=development
VITE_ENVIRONMENT=development

# Feature Flags
VITE_FEATURE_REAL_TIME_CALCULATION=true
VITE_FEATURE_EXPORT_RESULTS=false
VITE_FEATURE_SAVE_HISTORY=false
VITE_FEATURE_PRINT_RESULTS=false

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=

# Medical Disclaimers
VITE_SHOW_MEDICAL_DISCLAIMER=true

# Scoring System Configuration
VITE_DEFAULT_SCORE_SYSTEM=wells
VITE_AVAILABLE_SCORES=wells,alvarado,child
